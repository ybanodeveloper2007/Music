  <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/AppModalStyle</item>
    <!-- switch on thumb & track color -->
    <item name="colorControlActivated">@color/accent</item>
    <!-- switch off thumb color -->
    <item name="colorSwitchThumbNormal">#efefef</item>
    <item name="thumbTint">@color/accent</item>
    <!-- switch off track color -->
    <item name="android:colorForeground">#efefef</item>
    <item name="trackTint">#444</item>
  </style>

  <style name="MenuTextStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_dialog</item>
  </style>

  <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="SwitchCompatTheme" parent="Preference.SwitchPreferenceCompat.Material">
    <item name="colorControlNormal">#efefef</item>
    <!-- switch on thumb & track color -->
    <item name="colorControlActivated">#efefef</item>

    <!-- switch off thumb color -->
    <item name="colorSwitchThumbNormal">#efefef</item>

    <item name="thumbTint">#efefef</item>

    <!-- switch off track color -->
    <item name="android:colorForeground">#efefef</item>

    <item name="trackTint">#efefef</item>

  </style>

  <style name="SwitchCompatThemeActivated" parent="Preference.SwitchPreferenceCompat.Material">
    <item name="colorControlNormal">#efefef</item>
    <!-- switch on thumb & track color -->
    <item name="colorControlActivated">@color/accent</item>
    <!-- switch off thumb color -->
    <item name="colorSwitchThumbNormal">#efefef</item>
    <item name="thumbTint">@color/accent</item>
    <!-- switch off track color -->
    <item name="android:colorForeground">#efefef</item>
    <item name="trackTint">#444</item>
  </style>

