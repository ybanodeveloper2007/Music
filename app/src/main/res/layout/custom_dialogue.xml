<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/label_popup_one"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Change Cover Image"
            android:visibility="visible"
            android:fontFamily="@font/fa_light_300"
            android:textColor="@color/gnt_black"
            android:padding="5dp"
            android:textScaleX="1.3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/label_popup_two"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/fa_light_300"
            android:text=" Setting "
            android:visibility="visible"
            android:textColor="@color/gnt_black"
            android:padding="5dp"
            android:textScaleX="1.3"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/label_popup_three"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text=" Copy Link to Profile "
            android:fontFamily="@font/fa_light_300"
            android:visibility="visible"
            android:textColor="@color/gnt_black"
            android:padding="5dp"
            android:textScaleX="1.3"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/label_close"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text=" Close "
            android:visibility="visible"
            android:textColor="@color/accent"
            android:padding="5dp"
            android:textScaleX="1.3"
            android:textSize="15dp" />

    </LinearLayout>



</RelativeLayout>

